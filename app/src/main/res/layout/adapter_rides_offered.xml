<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="itemClick"
            type="com.contus.carpooling.dashboard.homepage.viewmodel.DashboardController" />

        <variable
            name="rideOfferedDetails"
            type="com.contus.carpooling.dashboard.ridesoffered.model.RidesOfferedDetails" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{itemClick.itemOnClick()}"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/iv_user_icon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="0.6"
                        android:src="@drawable/ic_person" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/iv_user_icon"
                        android:layout_toLeftOf="@+id/ll_right_layout"
                        android:layout_toRightOf="@id/iv_user_icon"
                        android:layout_toStartOf="@+id/ll_right_layout"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_offerer_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="name"
                            android:textSize="14sp" />
                        <!--android:text="@={rideOfferedDetails.creatorId}"-->

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <RatingBar
                                style="@style/CustomRatingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="1dp"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:rating="3.5"
                                android:stepSize="0.5" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="(120 ratings)"
                                android:textSize="10dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_right_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:layout_weight="0.6"
                        android:orientation="vertical"
                        android:layout_alignParentTop="true">

                        <LinearLayout
                            android:layout_width="96dp"
                            android:layout_height="wrap_content"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/tv_offered_cost"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_corner_blue_boarder"
                                android:gravity="center"
                                android:padding="5dp"
                                android:paddingLeft="5dp"
                                android:text="@={rideOfferedDetails.cost}"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />


                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/button_rounded_corner_share"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="@={rideOfferedDetails.type}"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_available_seat" />

                            <TextView
                                android:id="@+id/tv_available_seats"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@={rideOfferedDetails.seats}"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F5F5F5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:id="@+id/tv_arrival_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@={rideOfferedDetails.arrivalDate}"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_arrival_place"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="2"
                            android:text="@={rideOfferedDetails.arrivalPoint}"
                            android:textColor="@color/colorHighLightBlue"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_arrival_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="@={rideOfferedDetails.arrivalTime}"
                            android:textSize="12sp" />

                        <!--<TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10: 30 AM"
                            android:textSize="12sp" />-->
                    </LinearLayout>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow"
                        android:tint="@color/colorHighLightBlue" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:id="@+id/tv_departure_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@={rideOfferedDetails.departureDate}"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_departure_place"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="2"
                            android:text="@={rideOfferedDetails.departurePoint}"
                            android:textColor="@color/colorHighLightBlue"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_departure_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@={rideOfferedDetails.departureTime}"
                            android:textAlignment="center"
                            android:textSize="12sp" />

                        <!--<TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10: 30 AM"
                            android:textSize="12sp" />-->
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>