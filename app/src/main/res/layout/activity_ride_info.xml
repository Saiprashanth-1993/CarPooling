<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data >
        <variable
            name="itemClick"
            type="com.contus.carpooling.offeredrideinfo.viewmodel.OfferedRidesInformationController" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/rides_information"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_head" />
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBackground">

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_profile_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x_small_size"
                    android:layout_marginRight="@dimen/x_small_size"
                    android:layout_marginTop="@dimen/x_small_size">

                    <LinearLayout
                        android:id="@+id/ll_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/small_size">

                        <ImageView
                            android:id="@+id/iv_profile_icon"
                            android:layout_width="@dimen/extra_large_size"
                            android:layout_height="@dimen/extra_large_size"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_person" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_profile_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/x_small_size"
                            android:text="@string/rides_name_text"
                            android:textColor="@color/colorHighLightBlue"
                            android:textSize="@dimen/text_extra_large" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_profile_team_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/x_small_size"
                            android:text="@string/rides_web_team"
                            android:textColor="@android:color/background_dark"
                            android:textSize="@dimen/text_small" />

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/small_size"
                            android:text="@string/rides_personal_info"
                            android:textColor="@color/colorHighLightBlue"
                            android:textSize="@dimen/text_extra_large" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/x_small_size">

                            <ImageView
                                android:layout_gravity="center"
                                android:id="@+id/iv_mail_icon"
                                android:layout_width="@dimen/image_width"
                                android:layout_height="@dimen/image_height"
                                android:src="@drawable/ic_mail" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_mail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/x_small_size"
                                android:layout_toRightOf="@+id/iv_mail_icon"
                                android:maxLines="2"
                                android:text="@string/rides_user_mail"
                                android:textSize="@dimen/x_medium_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/x_small_size">

                            <ImageView
                                android:layout_gravity="center"
                                android:id="@+id/iv_gender_icon"
                                android:layout_width="@dimen/image_width"
                                android:layout_height="@dimen/image_height"
                                android:src="@drawable/ic_mail" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_gender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/x_small_size"
                                android:maxLines="2"
                                android:text="@string/gender_male"
                                android:textSize="@dimen/x_medium_size" />
                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cv_ride_info"
                    android:layout_below="@+id/cv_profile_info"
                    android:layout_marginLeft="@dimen/x_small_size"
                    android:layout_marginRight="@dimen/x_small_size"
                    android:layout_marginTop="@dimen/x_small_size"
                    card_view:cardBackgroundColor="@android:color/white"
                    card_view:cardCornerRadius="4dp"
                    card_view:cardElevation="@dimen/zero_size">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/small_size"
                            android:paddingTop="@dimen/small_size"
                            android:text="@string/rides_information"
                            android:textColor="@color/colorHighLightBlue"
                            android:textSize="@dimen/text_extra_large" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="@dimen/zero_size"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingLeft="@dimen/medium_size"
                                android:paddingRight="@dimen/medium_size"
                                android:paddingTop="@dimen/medium_size">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/date"
                                    android:textSize="@dimen/text_small" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:maxLines="2"
                                    android:text="@string/rides_from_location"
                                    android:textColor="@color/colorHighLightBlue"
                                    android:textSize="@dimen/text_medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/time"
                                    android:textSize="@dimen/text_small" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="@dimen/medium_size"
                                android:layout_height="@dimen/medium_size"
                                android:layout_gravity="center"
                                android:layout_marginTop="7dp"
                                android:src="@drawable/ic_arrow"
                                android:tint="@color/colorHighLightBlue" />

                            <LinearLayout
                                android:layout_width="@dimen/zero_size"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingLeft="@dimen/medium_size"
                                android:paddingRight="@dimen/medium_size"
                                android:paddingTop="@dimen/medium_size">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/date"
                                    android:textSize="@dimen/text_small" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:maxLines="2"
                                    android:text="@string/rides_to_location"
                                    android:textColor="@color/colorHighLightBlue"
                                    android:textSize="@dimen/text_medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/time"
                                    android:textSize="@dimen/text_small" />
                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:layout_marginBottom="@dimen/small_size"
                            android:layout_marginTop="@dimen/small_size"
                            android:background="@color/colorEditTextHint" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/small_size">

                            <Button
                                android:layout_width="@dimen/zero_size"
                                android:layout_height="@dimen/large_size"
                                android:layout_margin="@dimen/xs_small_size"
                                android:layout_weight="1"
                                android:background="@drawable/circle_text_view"
                                android:paddingLeft="@dimen/x_small_size"
                                android:paddingRight="@dimen/x_small_size"
                                android:text="@string/sun"
                                android:textSize="@dimen/text_tiny" />

                            <Button
                                android:layout_width="@dimen/zero_size"
                                android:layout_height="@dimen/large_size"
                                android:layout_margin="@dimen/xs_small_size"
                                android:layout_weight="1"
                                android:background="@drawable/circle_text_view_selected"
                                android:paddingLeft="@dimen/x_small_size"
                                android:paddingRight="@dimen/x_small_size"
                                android:text="@string/mon"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/text_tiny" />

                            <Button
                                android:layout_width="@dimen/zero_size"
                                android:layout_height="@dimen/large_size"
                                android:layout_margin="@dimen/xs_small_size"
                                android:layout_weight="1"
                                android:background="@drawable/circle_text_view_selected"
                                android:paddingLeft="@dimen/x_small_size"
                                android:paddingRight="@dimen/x_small_size"
                                android:text="@string/tue"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/text_tiny" />

                            <Button
                                android:layout_width="@dimen/zero_size"
                                android:layout_height="@dimen/large_size"
                                android:layout_margin="@dimen/xs_small_size"
                                android:layout_weight="1"
                                android:background="@drawable/circle_text_view"
                                android:paddingLeft="@dimen/x_small_size"
                                android:paddingRight="@dimen/x_small_size"
                                android:text="@string/wed"
                                android:textSize="@dimen/text_tiny" />

                            <Button
                                android:layout_width="@dimen/zero_size"
                                android:layout_height="@dimen/large_size"
                                android:layout_margin="@dimen/xs_small_size"
                                android:layout_weight="1"
                                android:background="@drawable/circle_text_view"
                                android:paddingLeft="@dimen/x_small_size"
                                android:paddingRight="@dimen/x_small_size"
                                android:text="@string/thu"
                                android:textSize="@dimen/text_tiny" />

                            <Button
                                android:layout_width="@dimen/zero_size"
                                android:layout_height="@dimen/large_size"
                                android:layout_margin="@dimen/xs_small_size"
                                android:layout_weight="1"
                                android:background="@drawable/circle_text_view_selected"
                                android:paddingLeft="@dimen/x_small_size"
                                android:paddingRight="@dimen/x_small_size"
                                android:text="@string/fri"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/text_tiny" />

                            <Button
                                android:layout_width="@dimen/zero_size"
                                android:layout_height="@dimen/large_size"
                                android:layout_margin="@dimen/xs_small_size"
                                android:layout_weight="1"
                                android:background="@drawable/circle_text_view"
                                android:paddingLeft="@dimen/x_small_size"
                                android:paddingRight="@dimen/x_small_size"
                                android:text="@string/sat"
                                android:textSize="@dimen/text_tiny" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/small_size"
                            android:layout_marginBottom="@dimen/x_small_size"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left">

                                <ImageView
                                    android:layout_width="@dimen/image_width"
                                    android:layout_height="@dimen/image_height"
                                    android:src="@drawable/ic_available_seat" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/image_height"
                                    android:gravity="center"
                                    android:text="@string/seats"
                                    android:textSize="@dimen/text_medium" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:paddingRight="@dimen/x_small_size">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/rupees"
                                    android:textColor="@color/colorHighLightBlue"
                                    android:textSize="@dimen/text_medium" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cv_ride_info"
                    android:layout_marginLeft="@dimen/x_small_size"
                    android:layout_marginRight="@dimen/x_small_size"
                    android:layout_marginTop="@dimen/x_small_size"
                    card_view:cardBackgroundColor="@android:color/white"
                    card_view:cardCornerRadius="@dimen/xs_medium_size"
                    card_view:cardElevation="@dimen/zero_size">

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@drawable/button_rounded_corner_border"
                        android:text="@string/book"
                        android:textAllCaps="false"
                        android:onClick="@{itemClick.bookOnclick}"
                        android:textColor="@android:color/white"/>
                </android.support.v7.widget.CardView>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</layout>