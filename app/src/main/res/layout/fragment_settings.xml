<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="onClickController"
            type="com.contus.carpooling.settings.viewmodel.SettingsController" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{onClickController.changePasswordOnClick()}"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/text_left"
                android:paddingTop="@dimen/text_width">

                <ImageView
                    android:layout_width="@dimen/text_width"
                    android:layout_height="@dimen/text_height"
                    android:src="@drawable/ic_password" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_size"
                    android:text="@string/change_pass"
                    android:textSize="@dimen/text_extra_large" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_view_size"
                android:layout_marginTop="@dimen/text_size"
                android:background="@color/light_hash" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/text_left"
                android:paddingTop="@dimen/text_width">

                <ImageView
                    android:id="@+id/iv_notification_icon"
                    android:layout_width="@dimen/text_width"
                    android:layout_height="@dimen/text_height"
                    android:src="@drawable/ic_notification" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/notification_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_size"
                    android:layout_toRightOf="@+id/iv_notification_icon"
                    android:text="@string/notifi"
                    android:textSize="@dimen/text_extra_large" />

                <android.support.v7.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/text_size"
                    android:checked="true"
                    app:theme="@style/SwitchStyle" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_view_size"
                android:layout_marginTop="@dimen/text_size"
                android:background="@color/light_hash" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/text_left"
                android:paddingTop="@dimen/text_width">

                <ImageView
                    android:layout_width="@dimen/text_width"
                    android:layout_height="@dimen/text_height"
                    android:src="@drawable/ic_help" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_size"
                    android:text="@string/help"
                    android:textSize="@dimen/text_extra_large" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_view_size"
                android:layout_marginTop="@dimen/text_size"
                android:background="@color/light_hash" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/text_left"
                android:paddingTop="@dimen/text_width">

                <ImageView
                    android:layout_width="@dimen/text_width"
                    android:layout_height="@dimen/text_height"
                    android:src="@drawable/ic_about" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_size"
                    android:text="@string/about"
                    android:textSize="@dimen/text_extra_large" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_view_size"
                android:layout_marginTop="@dimen/text_size"
                android:background="@color/light_hash"/>

        </LinearLayout>
    </LinearLayout>
</layout>