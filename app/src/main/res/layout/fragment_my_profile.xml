<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="rideOfferedDetails"
            type="com.contus.carpooling.dashboard.ridesoffered.model.RidesOfferedDetails" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="My Profile"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_head" />
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBackground">

                <LinearLayout
                    android:id="@+id/ll_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/iv_profile_icon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_person" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="Bhuvan Nesan"
                        android:textColor="@color/colorHighLightBlue"
                        android:textSize="@dimen/text_extra_large" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_profile_team_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="Web Team"
                        android:textColor="@android:color/background_dark"
                        android:textSize="@dimen/text_small" />
                </LinearLayout>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/ll_profile"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="-20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/colorSecondaryColor"
                    android:src="@drawable/ic_action_edit" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_profile_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_profile"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    card_view:cardBackgroundColor="@android:color/white"
                    card_view:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Personal Information"
                            android:textColor="@color/colorHighLightBlue"
                            android:textSize="@dimen/text_extra_large" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/iv_mail_icon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_profile_mail" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_mail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@+id/iv_mail_icon"
                                android:maxLines="2"
                                android:text="Bhuvan Nesan"
                                android:textColor="@android:color/background_dark"
                                android:textSize="@dimen/text_medium" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/iv_ph_icon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_profile_mobile" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@+id/iv_ph_icon"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="Bhuvan NesaBhuvan NesannBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan NesanBhuvan Nesan"
                                android:textColor="@android:color/background_dark"
                                android:textSize="@dimen/text_medium" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/iv_addr_icon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_profile_office" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_addr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@+id/iv_addr_icon"
                                android:maxLines="2"
                                android:text="Bhuvan Nesan"
                                android:textColor="@android:color/background_dark"
                                android:textSize="@dimen/text_medium" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/iv_loc_icon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_profile_map" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@+id/iv_loc_icon"
                                android:maxLines="2"
                                android:text="Bhuvan Nesan"
                                android:textColor="@android:color/background_dark"
                                android:textSize="@dimen/text_medium" />
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cv_profile_info"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    card_view:cardBackgroundColor="@android:color/white"
                    card_view:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Vehicle Description"
                            android:textColor="@color/colorHighLightBlue"
                            android:textSize="@dimen/text_extra_large" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_vehicle_type_txt"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:maxLines="1"
                                android:text="Vehicle Type"
                                android:textColor="@android:color/background_dark"
                                android:textSize="@dimen/text_medium" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_vehicle_type_val"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="25dp"
                                android:layout_toRightOf="@+id/tv_vehicle_type_txt"
                                android:maxLines="1"
                                android:text="4 wheeler"
                                android:textSize="@dimen/text_small" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"

                            android:padding="5dp">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_vehicle_name_txt"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="Vehicle Name"
                                android:textColor="@android:color/background_dark"
                                android:textSize="@dimen/text_medium" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_vehicle_name_val"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="25dp"
                                android:layout_toRightOf="@+id/tv_vehicle_name_txt"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="BMW A7"
                                android:textSize="@dimen/text_small" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_vehicle_num_txt"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:maxLines="1"
                                android:text="Vehicle No."
                                android:textColor="@android:color/background_dark"
                                android:textSize="@dimen/text_medium" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_vehicle_num_val"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="25dp"
                                android:layout_toRightOf="@+id/tv_vehicle_num_txt"
                                android:maxLines="1"
                                android:text="TN09 J866"
                                android:textSize="@dimen/text_small" />
                        </RelativeLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</layout>