<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x_small_size"
        android:paddingRight="@dimen/x_small_size"
        android:paddingTop="@dimen/x_small_size">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="@dimen/card_radius_size"
            card_view:cardElevation="@dimen/zero_size">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/small_size"
                android:paddingLeft="@dimen/x_small_size"
                android:paddingRight="@dimen/x_small_size"
                android:paddingTop="@dimen/small_size">

                <ImageView
                    android:layout_width="@dimen/x_large_size"
                    android:layout_height="@dimen/x_large_size"
                    android:src="@drawable/ic_person" />

                <LinearLayout
                    android:layout_width="@dimen/zero_size"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x_small_size"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/header_notification"
                        android:textSize="@dimen/text_head" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x_small_size"
                        android:layout_marginTop="@dimen/x_small_size"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RatingBar
                            style="@style/CustomRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/xs_small_size"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:rating="3.5"
                            android:stepSize="0.5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="@string/rating"
                            android:textSize="@dimen/text_medium" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="@dimen/zero_size"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_rounded_corner_border_green"
                    android:gravity="center"
                    android:padding="@dimen/card_margin"
                    android:text="@string/accepted"
                    android:textColor="@android:color/white" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>